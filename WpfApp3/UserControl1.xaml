<UserControl x:Class="WpfApp3.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3"
             mc:Ignorable="d" Height="200" Width="350" Foreground="Black" Background="#FF3C6291">


    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <Label Margin="10,26,10,57" Content="Niste uneli validno &#xD;&#xA; korisničko ime ili &#xA; šifru" FontSize="25" FontWeight="Bold" Grid.ColumnSpan="2" Grid.RowSpan="2" Foreground="#DDFFFFFF"/>
        <Button x:Name="Exit" Content="ZATVORI" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="#FFB20505" BorderBrush="Transparent" Grid.ColumnSpan="2" Margin="63,0,64,7" Grid.Row="1" FontSize="12" Width="81" Height="28" Click="Button_Click"/>
    </Grid>
</UserControl>
